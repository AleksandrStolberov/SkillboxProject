<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    android:layout_height="160dp"
    android:background="@drawable/divider_calendar">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/collectionImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@id/collectionTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/like_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/collectionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/countTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionImg"
        tools:text="Любимые" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countTxt"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/divider_score"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionTxt"
        tools:text="83" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>