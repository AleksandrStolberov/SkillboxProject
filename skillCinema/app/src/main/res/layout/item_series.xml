<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/seasonTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_200"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/dateTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="1 серия. " />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nameSeriesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_200"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/dateTxt"
        app:layout_constraintStart_toEndOf="@id/seasonTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Введение" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_200"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seasonTxt"
        tools:text="16 марта 2023" />

</androidx.constraintlayout.widget.ConstraintLayout>